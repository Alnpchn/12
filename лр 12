	unsigned char* a1, * a2, * a3, * a4; 
	unsigned char* a; 
	prt = &l; 
	a = (unsigned char*)prt; 
	a1 = a + 3;
	a2 = a + 2;
	a3 = a + 1;
	a4 = a; 
	printf("%.2x\n%.2x\n%.2x\n%.2x\n", *a1, *a2, *a3, *a4);
